{
  "cleanupPeriodDays": 90,
  "forceLoginMethod": "claudeai",
  "includeCoAuthoredBy": false,
  "permissions": {
    "defaultMode": "disable",
    "deny": [
      "Bash(git push:main)",
      "Bash(git push:master)",
      "Bash(git push:production)",
      "Bash(git add -A:*)",
      "Bash(git add:.:*)"
    ],
    "allow": [
      "LS",
      "Read",
      "Write",
      "Edit",
      "MultiEdit",
      "Glob",
      "Grep",
      "NotebookRead",
      "NotebookEdit",
      "Task",
      "TodoWrite",
      "WebFetch(domain:*)",
      "WebSearch",
      "Bash(source:*)",
      "Bash(cd:*)",
      "Bash(claude config --help)",
      "Bash(claude config get:*)",
      "Bash(claude config list:*)",
      "Bash(check-mcp-logs:*)",
      "Bash(python:*)",
      "Bash(go:*)",
      "Bash(node:*)",
      "Bash(git:*)",
      "Bash(gh:*)",
      "Bash(ls:*)",
      "Bash(tmux display-message \"[A-Za-z0-9\\s\\-_.:!?,]+\")"
    ],
    "additionalDirectories": ["//"]
  },
  "env": {
    "CLAUDE_CODE_MAX_OUTPUT_TOKENS": "8192",
    "BASH_DEFAULT_TIMEOUT_MS": "31000",
    "BASH_MAX_TIMEOUT_MS": "600000",
    "BASH_MAX_OUTPUT_LENGTH": "50000",
    "DISABLE_COST_WARNINGS": "1",
    "DISABLE_BUG_COMMAND": "1",
    "DISABLE_ERROR_REPORTING": "1",
    "DISABLE_TELEMETRY": "1",
    "MCP_TIMEOUT": "30000",
    "MCP_TOOL_TIMEOUT": "60000",
    "MAX_MCP_OUTPUT_TOKENS": "40000"
  },
  "enableAllProjectMcpServers": false,
  "enabledMcpjsonServers": ["github"]
}
