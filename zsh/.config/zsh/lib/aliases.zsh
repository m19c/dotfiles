# fast access
alias dev='cd ~/Development'

alias vi='nvim'
alias vim='nvim'

# git
alias gs="git status"
alias gc="git commit"
alias ga="git add"

# configure default search engine for s
alias s="s -p google"

# replace ping
alias ping=gping

# alias du
alias du="dust"

# alias for top
alias top="btm"

# devops / sre
alias k=kubectl
alias t=terraform
alias tp=terraform plan
alias ta=terraform apply
alias ktx=kubectx
alias kns=kubens

# replacement ls
alias l="eza --icons=always --group-directories-first --long --git "
alias ls="eza --icons=always --group-directories-first --long --git "
alias ll="eza --icons=always --group-directories-first -l "

# enforce grep colorful output
alias grep="grep --color"

# override cat
alias cat="bat"

# override tmuxinator
alias tn="tmuxinator"
